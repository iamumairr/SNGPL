@model SNGPL.Models.Feedback
@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container pt-2" style="border-top: 2px solid #f84141;">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h2 class="text-center font-weight-bold">FEEDBACK</h2>
            <div class="row">
                <div class="col-md-3">
                    <img src="~/Images/pipeline.jpg" alt="" class="img-fluid" />
                </div>
                <div class="col-md-9">
                    <h4 class="font-weight-bold text-primary">Give Us Your Valuable FeedBack</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <form method="post" asp-action="Feedback">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group">
                                    <input type="text" class="form-control" asp-for="FullName" spellcheck="true" placeholder="Full Name">
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email Address (abc@gmail.com)" asp-for="Email">
                                    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>

                                <div class="form-group">
                                    <select class="form-control" asp-for="Rating">
                                        <option disabled selected>How would you rate our services? (out of 5)</option>
                                        <option value="worse">1 - Worse</option>
                                        <option value="bad">2 - Bad</option>
                                        <option value="average">3 - Average</option>
                                        <option value="good">4 - Good</option>
                                        <option value="best">5 - Best</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <select class="form-control" asp-for="Environment">
                                        <option disabled selected>How would you rate our Environment?</option>
                                        <option value="bad">Bad</option>
                                        <option value="average">Average</option>
                                        <option value="excellent">Excellent</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <textarea spellcheck="true" asp-for="Description" class="form-control" rows="2" placeholder="Description"></textarea>
                                    <span class="text-danger" asp-validation-for="Description"></span>
                                </div>
                                <button type="submit" class="btn btn-primary font-weight-bold">Send Feedback</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}