@{
    ViewData["Title"] = "Application Sumitted";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string token;
    @if (TempData["Token"].ToString() != "")
    {
        token = TempData["Token"].ToString();
    }
    else
    {
        token = string.Empty;
    }
}

<div class="container pt-2">
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                <strong>Thank You for submitting your Application</strong> <br />
                Your Application Number is <br />
                <h3 class="text-danger">
                    @token
                </h3>
                You can track all your application progress by using this token at this <a asp-action="TrackApplication" asp-controller="Home">Link</a>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</div>