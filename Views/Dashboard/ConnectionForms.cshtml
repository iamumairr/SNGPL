@model IEnumerable<SNGPL.Models.ConnectionForm>

@{
    ViewData["Title"] = "Connection Forms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Icon = "fas fa-th";
}

<div class="container">
    @if (Model.Count() > 0)
    {
        <div class="card card-primary shadow-lg">
            <div class="card-body" style="font-size:15px">
                <table id="DT_load" class="table table-bordered table-striped table-hover w-100 table-sm table-responsive-sm">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Email</th>
                            <th>CNIC</th>
                            <th>Cell Number</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Customer_Name</td>
                                <td>@item.EmailAddress</td>
                                <td>@item.CNIC</td>
                                <td>@item.CellNumber</td>
                                <td>@item.Status</td>

                                <td>
                                    <a asp-action="Delete" asp-controller="Dashboard" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm text-danger mx-1" style="cursor:pointer">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Oops!</strong> No Connection Request were found.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>