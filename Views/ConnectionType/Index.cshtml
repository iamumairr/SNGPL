@model IEnumerable<SNGPL.Models.ConnectionType>
@{
    ViewData["Title"] = "Connection Types";
    ViewBag.Icon = "fab fa-buffer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <a asp-action="Upsert" asp-controller="ConnectionType" class="btn btn-success mb-1 text-white">
        <i class="fas fa-plus-circle"></i> Add New Type
    </a>

    @if (Model.Count() > 0)
    {
        <div class="card shadow-lg">
            <div class="card-body" style="font-size:15px">
                <table id="DT_load" class="table table-bordered table-striped table-hover w-100">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td width="25%">
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>

                                <td width="13%">
                                    <a asp-action="Upsert" asp-controller="ConnectionType" asp-route-id="@item.Id" class='btn btn-outline-primary btn-sm text-primary mx-1' style="cursor:pointer">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="ConnectionType" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm text-danger mx-1" style="cursor:pointer">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Oops!</strong> No connection types were found. Please add a connection type first.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>